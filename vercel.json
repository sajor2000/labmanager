{
  "buildCommand": "npm run vercel-build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "app/api/studies/route.ts": {
      "maxDuration": 10
    },
    "app/api/buckets/route.ts": {
      "maxDuration": 10
    },
    "app/api/tasks/route.ts": {
      "maxDuration": 10
    },
    "app/actions/*.ts": {
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily-reminder",
      "schedule": "0 9 * * *"
    }
  ],
  "env": {
    "PRISMA_HIDE_UPDATE_MESSAGE": "1",
    "NODE_ENV": "production",
    "DATABASE_URL": "@postgres_url",
    "PRISMA_DATABASE_URL": "@prisma_database_url"
  },
  "build": {
    "env": {
      "DATABASE_URL": "@postgres_url",
      "PRISMA_GENERATE_DATAPROXY": "true"
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/health"
    }
  ]
}