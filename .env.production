# Production Environment Variables Template
# IMPORTANT: This file should contain NO actual secrets/keys
# Configure all secrets in your deployment environment (Vercel dashboard)

# Database - Configure in Vercel with your actual Prisma Accelerate URL
DATABASE_URL="your-prisma-accelerate-url-here"

# Authentication - Generate secure values for production
NEXTAUTH_URL="https://your-production-domain.vercel.app"
NEXTAUTH_SECRET="GENERATE_A_SECURE_SECRET_IN_VERCEL"

# Email Service - Configure in Vercel dashboard
RESEND_API_KEY="CONFIGURE_IN_VERCEL"
EMAIL_FROM="your-email@domain.com"

# Application
NEXT_PUBLIC_APP_URL="https://your-production-domain.vercel.app"

# AI Services - Configure in Vercel dashboard
OPENAI_API_KEY="CONFIGURE_IN_VERCEL"
OPENAI_API_BASE_URL="https://api.openai.com/v1"
OPENAI_API_VERSION="2024-08-06"
OPENAI_API_MODEL="gpt-4o-mini"
OPENAI_API_MODEL_2="gpt-4o"

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_DEBUG="false"
