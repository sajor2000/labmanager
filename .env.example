# ==========================================
# REQUIRED ENVIRONMENT VARIABLES
# ==========================================

# Database (Required)
DATABASE_URL="postgresql://username:password@localhost:5432/labmanager"

# Authentication (Required)
NEXTAUTH_SECRET="your-secret-key-at-least-32-characters-long-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# ==========================================
# OPTIONAL ENVIRONMENT VARIABLES
# ==========================================

# Email Configuration (Optional)
EMAIL_FROM="noreply@labmanage.app"
RESEND_API_KEY=""
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASSWORD=""

# AI Services (Optional)
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""

# Storage (Optional)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
S3_BUCKET_NAME=""

# Feature Flags
ENABLE_AI_FEATURES=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_FILE_UPLOADS=false

# Security & Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_PER_MINUTE=60
MAX_REQUEST_SIZE_MB=10

# Logging
LOG_LEVEL="info"

# Monitoring (Optional)
SENTRY_DSN=""
DATADOG_API_KEY=""

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="LabSync Research Platform"

# Environment
NODE_ENV="development"