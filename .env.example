# ===============================================
# ENVIRONMENT VARIABLES TEMPLATE
# Copy this to .env.local for development
# Configure in Vercel dashboard for production
# ===============================================

# Database Configuration
# Use Prisma Accelerate URL for production (includes connection pooling)
DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR_API_KEY_HERE"

# Alternative: Direct PostgreSQL connection for development/migrations
# DIRECT_DATABASE_URL="postgres://user:password@host:5432/database?sslmode=require"

# Authentication (NextAuth.js)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-generate-with-openssl-rand-base64-32"

# Application Configuration
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# AI Services Configuration
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_API_BASE_URL="https://api.openai.com/v1"
OPENAI_API_VERSION="2024-08-06"
OPENAI_API_MODEL="gpt-4o-mini"
OPENAI_API_MODEL_2="gpt-4o"

# Email Service (Resend)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY="re_your-resend-api-key-here"
EMAIL_FROM="your-email@domain.com"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_DEBUG="true"

# Optional: Error tracking (Sentry)
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# Optional: Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS=""
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=""

# Cron Jobs / Background Tasks
# TRANSCRIPT_CLEANUP_SCHEDULE="0 2 * * *"

# ===============================================
# VERCEL DEPLOYMENT NOTES:
# 1. Set all secrets in Vercel dashboard (do not commit real values)
# 2. Use Prisma Accelerate URL for DATABASE_URL in production
# 3. Generate secure NEXTAUTH_SECRET: openssl rand -base64 32
# 4. Set NEXTAUTH_URL to your production domain
# 5. Configure all API keys in Vercel environment variables
# ===============================================